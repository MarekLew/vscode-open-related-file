{
    "name": "open-related-file",
    "displayName": "Open Related File",
    "description": "Open a file that has a similar name to the currently opened file",
    "icon": "icon.png",
    "repository": {
        "type": "git",
        "url": "https://github.com/bryanthomaschen/vscode-open-related-file.git"   
    },
    "version": "0.0.1",
    "publisher": "bryanthomaschen",
    "engines": {
        "vscode": "^1.25.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:openRelatedFile.open"
    ],
    "configuration": {
        "type": "object",
        "title": "Open Related File Configuration",
        "properties": {
            "openRelatedFile.ignoreExt": {
                "type": "array",
                "default": [],
                "description": "Array of file extensions to ignore when opening related files"
            }
        }
    },
    "main": "./extension",
    "contributes": {
        "commands": [
            {
                "command": "openRelatedFile.open",
                "title": "Open related files"
            }
        ]
    },
    "scripts": {
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.6",
        "eslint": "^4.11.0",
        "@types/node": "^7.0.43",
        "@types/mocha": "^2.2.42"
    }
}
